rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Invoices folder - User can only access their own files
    match /invoices/{userId}/{allPaths=**} {
      // Allow read/write only if the userId in the path matches the authenticated user's uid
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
